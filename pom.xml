<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
	<groupId>io.tapdata</groupId>
	<version>1.0-SNAPSHOT</version>
    <modelVersion>4.0.0</modelVersion>
    <artifactId>tapdata-connectors</artifactId>
    <name>tapdata-connectors</name>
    <packaging>pom</packaging>
    <modules>
        <module>file-storages</module>
<!--        <module>tapdata-cli</module>-->
        <module>connectors-common</module>
        <module>connectors</module>
        <module>connectors-tdd</module>
        <module>connectors-unpackage</module>
        <module>connectors-javascript</module>
    </modules>

    <properties>

        <sonar.coverage.exclusions>
            connectors-common/debezium-bucket/**,
            connectors-common/mysql-binlog-connector-java/**,
            connectors-tdd/**,
            tapdata-cli/**,
            **/**Entity*,
            **/enums/**
        </sonar.coverage.exclusions>
        <sonar.exclusions>
            connectors-common/debezium-bucket/**,
            connectors-common/mysql-binlog-connector-java/**,
            connectors-tdd/**,
            **/**Entity*,
            **/enums/**
        </sonar.exclusions>
        <sonar.test.exclusions>
            **/src/test/**,
            tapdata-cli/**
        </sonar.test.exclusions>

        <sonar.inclusions>
            connectors-common/*,
            connectors-javascript/*,
            connectors-tdd/*,
            connectors-unpackage/*,
            file-storages/*,
            connectors/mysql-connector/**,
            connectors/kafka-connector/**,
            connectors/mongodb-connector/**,
            connectors/postgres-connector/**,
            connectors/clickhouse-connector/**,
            connectors/doris-connector/**,
            connectors/tidb-connector/**,
            connectors/opengauss-connector/**,
            connectors/oceanbase-mysql-connector/**,
            connectors/elasticsearch-connector/**,
            connectors/csv-connector/**
        </sonar.inclusions>
    </properties>

    <build>
        <plugins>
            <plugin>
                <groupId>org.apache.felix</groupId>
                <artifactId>maven-bundle-plugin</artifactId>
                <version>4.2.1</version>
                <extensions>true</extensions>
            </plugin>
            <plugin>
                <artifactId>maven-compiler-plugin</artifactId>
                <version>3.7.0</version>
                <configuration>
                    <source>${java.version}</source>
                    <target>${java.version}</target>
                </configuration>
            </plugin>
        </plugins>
    </build>
    <repositories>
        <repository>
            <id>tapdata-wendangshujuku-mongo</id>
            <name>mongo</name>
            <url>https://tapdata-maven.pkg.coding.net/repository/wendangshujuku/mongo/</url>
            <releases>
                <enabled>true</enabled>
            </releases>
            <snapshots>
                <enabled>true</enabled>
            </snapshots>
        </repository>
        <repository>
            <id>tapdata-tapdata-maven</id>
            <name>maven</name>
            <url>https://tapdata-maven.pkg.coding.net/repository/tapdata/maven/</url>
            <releases>
                <enabled>true</enabled>
            </releases>
            <snapshots>
                <enabled>true</enabled>
            </snapshots>
        </repository>
    </repositories>
    <profiles>
        <profile>
            <id>apple-silicon</id>
            <properties>
                <os.detected.classifier>osx-x86_64</os.detected.classifier>
            </properties>
        </profile>
    </profiles>
</project>

