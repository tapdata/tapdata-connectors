  "dataTypes": {
    "string": {
      "to": "TapString",
      "byte": "64k",
      "name": "string",
      "pkEnablement": false
    },
    "tinyint": {
      "to": "TapNumber",
      "bit": 8,
      "name": "tinyint",
      "precision": 3,
      "value": [
        -128,
        127
      ]
    },
    "smallint": {
      "to": "TapNumber",
      "bit": 16,
      "name": "smallint",
      "precision": 5,
      "value": [
        -32768,
        32767
      ]
    },
    "int": {
      "to": "TapNumber",
      "bit": 32,
      "name": "int",
      "precision": 10,
      "value": [
        -2147483648,
        2147483647
      ]
    },
    "bigint": {
      "to": "TapNumber",
      "name": "bigint",
      "bit": 64,
      "precision": 19,
      "value": [
        0,
        9223372036854775807
      ],
      "unsigned": "unsigned"
    },
    "float": {
      "to": "TapNumber",
      "name": "float",
      "precision": [
        1,
        30
      ],
      "scale": [
        0,
        30
      ],
      "value": [
        "-3.402823466E+38",
        "3.402823466E+38"
      ],
      "fixed": false
    },
    "double": {
      "to": "TapNumber",
      "name": "double",
      "precision": [
        1,
        255
      ],
      "preferPrecision": 11,
      "preferScale": 4,
      "scale": [
        0,
        30
      ],
      "value": [
        "-1.7976931348623157E+308",
        "1.7976931348623157E+308"
      ],
      "fixed": false
    },
    "decimal[($precision,$scale)]": {
      "to": "TapNumber",
      "precision": [
        1,
        65
      ],
      "scale": [
        0,
        30
      ],
      "defaultPrecision": 10,
      "defaultScale": 0,
      "fixed": true
    },
    "date": {
      "to": "TapDate",
      "range": [
        "1000-01-01",
        "9999-12-31"
      ],
      "pattern": "yyyy-MM-dd"
    },
    "timestamp": {
      "to": "TapDateTime",
      "range": [
        "1970-01-01 00:00:00.000",
        "2038-01-11 23:59:59.999"
      ],
      "pattern": "yyyy-MM-dd HH:mm:ss.SSS",
      "fraction": [
        0,
        6
      ],
      "defaultFraction": 0,
      "withTimeZone": true
    },
    "boolean": {
      "bit": 1,
      "name": "boolean",
      "to": "TapBoolean"
    }
  }
