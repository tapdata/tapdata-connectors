{
  "properties": {
    "name": "Elasticsearch",
    "icon": "icons/elasticsearch.png",
    "doc" : "${doc}",
    "id": "elasticsearch",
    "tags": ["Database", "schema-free"]
  },
  "configOptions": {
    "capabilities": [
      {
        "id": "dml_insert_policy",
        "alternatives": [
          "update_on_exists",
          "just_insert"
        ]
      },
      {
        "id": "dml_update_policy",
        "alternatives": [
          "ignore_on_nonexists",
          "insert_on_nonexists"
        ]
      }
    ],
    "connection": {
      "type": "object",
      "properties": {
        "host": {
          "required": true,
          "type": "string",
          "title": "${host}",
          "x-decorator": "FormItem",
          "x-component": "Input",
          "apiServerKey": "database_host",
          "x-index": 1
        },
        "port": {
          "required": true,
          "type": "string",
          "title": "${port}",
          "x-decorator": "FormItem",
          "x-component": "InputNumber",
          "apiServerKey": "database_port",
          "x-index": 2
        },
        "user": {
          "type": "string",
          "title": "${user}",
          "x-decorator": "FormItem",
          "x-component": "Input",
          "apiServerKey": "database_username",
          "x-index": 3
        },
        "password": {
          "type": "string",
          "title": "${password}",
          "x-decorator": "FormItem",
          "x-component": "Password",
          "apiServerKey": "database_password",
          "x-index": 4
        }
      }
    },
    "node": {
      "properties": {
        "shardsNumber": {
          "type": "string",
          "title": "${shardsNumber}",
          "x-decorator": "FormItem",
          "x-component": "InputNumber",
          "default": 1,
          "x-decorator-props": {
            "tooltip": "${shardsNumberTip}",
            "min": 1
          },
          "x-index": 1
        },
        "replicasNumber": {
          "type": "string",
          "title": "${replicasNumber}",
          "x-decorator": "FormItem",
          "x-component": "InputNumber",
          "default": 1,
          "x-decorator-props": {
            "tooltip": "${replicasNumberTip}",
            "min": 1
          },
          "x-index": 2
        },
        "dateFormat": {
          "type": "string",
          "title": "${date_format}",
          "x-decorator": "FormItem",
          "x-component": "Input",
          "default": "yyyy-MM-dd",
          "x-index": 3,
          "x-decorator-props": {
            "tooltip": "${date_format_tip}"
          }
        },
        "datetimeFormat": {
          "type": "string",
          "title": "${date_time_format}",
          "x-decorator": "FormItem",
          "x-component": "Input",
          "default": "yyyy-MM-dd'T'HH:mm:ss.SSS'Z'",
          "x-index": 4,
          "x-decorator-props": {
            "tooltip": "${date_time_format_tip}"
          }
        },
        "timeFormat": {
          "type": "string",
          "title": "${time_format}",
          "x-decorator": "FormItem",
          "x-component": "Input",
          "default": "HH:mm:ss",
          "x-index": 5,
          "x-decorator-props": {
            "tooltip": "${time_format_tip}"
          }
        },
        "fieldsMappingMode": {
          "type": "string",
          "title": "${fieldsMappingMode}",
          "x-decorator": "FormItem",
          "x-component": "Select",
          "default": "",
          "x-index": 7,
          "enum": [
            {
              "label": "${fieldsMappingModeDefault}",
              "value": ""
            },
            {
              "label": "${fieldsMappingModeAuto}",
              "value": "AUTO"
            },
            {
              "label": "${fieldsMappingModeSchema}",
              "value": "SCHEMA"
            }
          ]
        }
      }
    }
  },
  "messages": {
    "default": "en_US",
